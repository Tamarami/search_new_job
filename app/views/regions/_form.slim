= form_for @region do |f|
  .form-group
    = f.label :code, 'Код', class: 'control-label'
    = f.text_field :code, class: 'form-control', autofocus: true
  .form-group
    = f.label :name, 'Наименование', class: 'control-label'
    = f.text_field :name, class: 'form-control'
  .btn-group
    = link_to 'Назад', regions_path, class: 'btn btn-default'
    = f.submit 'Сохранить', class: 'btn btn-primary'
    - if @region.persisted?
      = link_to 'Удалить', region_path(@region), data: { confirm: 'Вы уверены?' }, method: :delete, class: 'btn btn-danger'
